<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_tableau_du_bord"
    tools:context=".PartieJeDepose.TableauDuBord"
    android:background="#f4f7f4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/svTableauDuBord"
        android:fillViewport="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relativeLayout3"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/tvLineTableauDuBord"
                android:layout_alignEnd="@+id/tvLineTableauDuBord"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:paddingTop="@dimen/nav_header_vertical_spacing"
                    android:src="@drawable/image_user"
                    android:id="@+id/imageUserTableauDuBord"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvNomEtPrenomUserTableauDuBord"
                    android:textSize="20dp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="right"
                    android:layout_alignStart="@+id/btnDeposeTableauDuBord"
                    android:layout_marginTop="30dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvInscriptionDureeTableauDuBord"
                    android:textSize="10dp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="right"
                    android:layout_alignStart="@+id/btnDeposeTableauDuBord"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="2dp" />

                <Button
                    style="@android:style/Widget.Button"
                    android:layout_width="150dp"
                    android:layout_height="32dp"
                    android:text="DÃ©poser une annonce"
                    android:id="@+id/btnDeposeTableauDuBord"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/tvInscriptionDureeTableauDuBord"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="---------------------------------------------------------"
                android:id="@+id/tvLineTableauDuBord"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:layout_marginTop="180dp"
                android:textColor="@android:color/black"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvStatistiqueTableauDuBord"
                android:layout_alignStart="@id/tvLineTableauDuBord"
                android:layout_below="@+id/tvLineTableauDuBord"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Statistiques : "
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvNombreAnnonceTableauDuNord"
                android:layout_below="@+id/tvLineTableauDuBord"
                android:textColor="@android:color/black"
                android:layout_alignStart="@+id/tvLineTableauDuBord"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv3TableauDuBord"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tvNombreAnnonceTableauDuNord" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tangyuhuang.propinko.DepotAnnonce">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/svDepotAnnonce">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout3"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Publiez vous annonce en 3 minutes"
                android:id="@+id/tv1DepotAnnonce"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:textColor="@android:color/holo_blue_light"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titre * :"
                android:id="@+id/tvTitreDepotAnnonce"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />

            <EditText
                style="@android:style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/etTitreDepotAnnonce"
                android:layout_marginTop="10dp"
                android:background="#cafcb9"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Catégorie * :"
                android:id="@+id/tvCatégorieDepotAnnonce"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/spinnerCategorieDepotAnnonce"
                android:prompt="@string/categorie"
                android:background="#cafcb9"
                android:spinnerMode="dialog"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description * :"
                android:id="@+id/tvDescriptionDepotAnnonce"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="20dp" />

            <EditText
                style="@android:style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/etDescriptionDepotAnnonce"
                android:background="#cafcb9"
                android:textSize="15dp"
                android:layout_below="@+id/etTelephoneDepotAnnonce1"
                android:layout_marginTop="10dp"
                android:layout_alignStart="@+id/etTelephoneDepotAnnonce1"
                android:layout_alignEnd="@+id/etTelephoneDepotAnnonce1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prix :"
                android:id="@+id/tvPrixDepotAnnonce"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp" />

            <EditText
                style="@android:style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etPrix1DepotAnnonce"
                android:layout_below="@+id/spinnerCategorieDepotAnnonce1"
                android:layout_alignEnd="@+id/spinnerCategorieDepotAnnonce1"
                android:layout_alignStart="@+id/spinnerCategorieDepotAnnonce1"
                android:layout_marginTop="10dp"
                android:background="#cafcb9"
                android:hint=" Prix à la journée *"
                android:textSize="15dp" />

            <EditText
                style="@android:style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etPrix3DepotAnnonce"
                android:layout_below="@+id/spinnerCategorieDepotAnnonce1"
                android:layout_alignEnd="@+id/spinnerCategorieDepotAnnonce1"
                android:layout_alignStart="@+id/spinnerCategorieDepotAnnonce1"
                android:layout_marginTop="10dp"
                android:background="#cafcb9"
                android:hint="Prix à 3 jours"
                android:textSize="15dp" />

            <EditText
                style="@android:style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etPrix7DepotAnnonce"
                android:layout_marginTop="10dp"
                android:background="#cafcb9"
                android:hint="Prix à 7 jours"
                android:textSize="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <EditText
                style="@android:style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etPrix15DepotAnnonce"
                android:layout_marginTop="10dp"
                android:background="#cafcb9"
                android:hint="Prix à 15 jours"
                android:textSize="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <Button
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="+"
                android:id="@+id/btnAjouterPrixDepotAnnonce"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                android:textSize="10dp"
                android:textColor="#54d954"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo d&apos;annonce :"
                android:id="@+id/tvPhotoDepotAnnonce"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp" />

            <Button
                style="@android:style/Widget.Button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="+"
                android:id="@+id/btnAjouterPhotoDepotAnnonce"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                android:textSize="30dp"
                android:textColor="#54d954"
                android:layout_gravity="center_horizontal|left"
                android:textStyle="bold"
                android:layout_marginTop="10dp" />

            <Button
                style="@android:style/Widget.Button"
                android:id="@+id/btnDeposerDepotAnnonce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Déposez-le !"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/etDescriptionDepotAnnonce1"
                android:layout_alignStart="@+id/etDescriptionDepotAnnonce1"
                android:layout_alignEnd="@+id/etDescriptionDepotAnnonce1"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

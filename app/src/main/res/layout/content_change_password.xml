<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_change_password"
    tools:context=".PartieJeDepose.ChangePassword">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/svChangePassword"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modification de votre mot de passe"
                android:id="@+id/tv1ChangePassword"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="60dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                style="@android:style/Widget.EditText"
                android:id="@+id/ancienPasswordChangePassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Ancien mot de passe *"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:minHeight="50dp"
                android:background="#cafcb9"
                android:textSize="13dp"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/tv1ChangePassword"
                android:layout_centerHorizontal="true" />

            <EditText
                style="@android:style/Widget.EditText"
                android:id="@+id/nouveauPasswordChangePassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Nouveau mot de passe *"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:minHeight="50dp"
                android:background="#cafcb9"
                android:textSize="13dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/ancienPasswordChangePassword"
                android:layout_centerHorizontal="true" />

            <EditText
                style="@android:style/Widget.EditText"
                android:id="@+id/confirNouveauPasswordChangePassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Confirmation nouveau mot de passe *"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:minHeight="50dp"
                android:background="#cafcb9"
                android:textSize="13dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/nouveauPasswordChangePassword"
                android:layout_centerHorizontal="true" />

            <Button
                style="@android:style/Widget.Button"
                android:id="@+id/btnEnregistrerChangePassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Enregistrer"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="20dp"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/confirNouveauPasswordChangePassword"
                android:layout_marginTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv2ChangePassword"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
